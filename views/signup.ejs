<div class="container">
    <%if(message=="Already Loggedin"){%>
         <p>You are already Logged in, please signout from here <a href="/signout">Signout</a></p>
        <%} else {%>
		<form class="form-signin" action="/signup" method="post">
        	<h2 class="form-signin-heading text-center">SignUp Form!</h2>
        
	        <label for="username" class="sr-only">Email</label>
	        <input type="email" name="username" id="username" class="form-control" placeholder="Email" required autofocus>
            
	        <label for="name" class="sr-only">Name</label>
	        <input type="text" name="name" id="name" class="form-control" placeholder="Name" required autofocus>
            
	        <label for="password" class="sr-only">Password</label>
	        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required autofocus>
	        
	        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            
            <hr>

            <p>Already have an account? <a href="/login">Signin</a></p>
      	 </form>
    <%}%>
    </div>

